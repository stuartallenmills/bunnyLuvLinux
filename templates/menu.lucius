.options {
   width:95%;
   margin-left:1%;
   margin-right:1%;
}

.menuBut {
   background:#eff8f8;
   border: 1pt solid #999;
   border-radius: 5pt;
   margin: 2px;
   padding: 5px;
   width: 12%;
   text-align:center;
   float:left;
   display:block;
   min-width:100px;
}

.menuBut:hover {
   background:#ffffff;
   border: 1pt solid #7f2020;
}

.menuBut a {
    text-decoration:none;
    color:#000000;
    font-weight:bold;
    margin:2px;
    padding:2px;
}