<div #showTitleAd>
 <b> Adopted
<div #showAdopted>
  $forall Entity adoptedID adR <-adopteds
    <div #sadRow>
     <div .sadRw>
      <div #sadDate>
          Date: #{showtime (adoptedDate adR)}
      <div #saPhone>
         Phone: #{personPhone (adoptedPerson adR)}
     <div .sadRw>
      <div #saName>
        <div #saNameT>
          Name: 
        <div #saFName>
           #{ personFirstName (adoptedPerson adR)} 
        <div #saLName>
            #{personLastName (adoptedPerson adR)}
     <div .sadRw>
      <div #saStreet>
         Street: #{personStreet (adoptedPerson adR)}
     <div .sadRw>
      <div #saCity>
         City: #{personCity (adoptedPerson adR)}
      <div #saState>
         State: #{personState (adoptedPerson adR)}
      <div #saZip>
         Zip: #{personZip (adoptedPerson adR)}